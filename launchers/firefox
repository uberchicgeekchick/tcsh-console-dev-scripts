#!/bin/tcsh -f
set this_program="`basename '${0}'`";
set firefox_profile_path="/profile.d/~slash./mozilla/${this_program}/profiles";
set argz="";

while( ${?1} && "${1}" != "" )
	switch( "${1}" )
	case "--launch-in-terminal":
	case "--use-launcher":
	case "--launcher":
		set use_launcher;
		breaksw
	case "--3.5":
		set program_path="/usr/bin/";
		breaksw
	case "--nightly-build":
		set rm_extensions;
		set program_path="/programs/Mozilla/Firefox3/x86_64/";
		breaksw
	case "-ProfileManager":
		set argz="${1} ${argz}";
		set ff_profile;
		breaksw
	case "-P":
		shift;
		if( ${?1} && "${1}" != "" && -d "${firefox_profile_path}/${1}" ) then
			set ff_profile="${1}";
		else
			set ff_profile="uberChick";
		endif
		breaksw;
	default:
		set argz="${argz} ${1}";
		breaksw
	endsw
	shift;
end

if(!(${?program_path})) then
	set program_path="";
endif

ff_init:
set program="${program_path}${this_program}";

set ff_binaries=("${program}-bin" "${program}");

@ ff_attempt=0;
ff_next:
foreach ff_binary( ${ff_binaries} )
	if(! ${?ff_found} ) then
		printf "Looking for running instance of: %s.\n" ${ff_binary};
		foreach ff_pid(`/bin/pidof ${ff_binary}`)
			printf "Found running instance of: %s; pid: %s\n" ${ff_binary} ${ff_pid};
			if( "${ff_pid}" != "" && $ff_pid > 0 ) then
				renice +5 $ff_pid >& /dev/null;
				printf "Found running instance of: %s; pid: %s\n" ${ff_binary} ${ff_pid};
				if(! ${?ff_found} ) set ff_found;
			endif
		end
	endif
end
if( !( ${?ff_found} ) ) then
	if(!( ${?program} && -x "${program}" ) ) then
		printf "Unable to find %s.\n", "${this_program}";
		exit -1;
	endif
endif
printf "Attempting load %s; attempt: %d.\n" ${this_program} ${ff_attempt};
if(! ${?ff_found} ) then
	if( ${ff_attempt} == 0 ) then
		if(! ${?ff_profile} ) set ff_profile="uberChick";
		set argz="-P '${ff_profile}' ${argz}";
	endif
	@ ff_attempt++;
	if( ${ff_attempt} > 1 && ${?rm_extensions} ) then
		rm ${firefox_profile_path}/${ff_profile}/extensions.* >& /dev/null &;
		sleep 5;
	endif
	goto ff_start
else if( ${ff_attempt} == 0 ) then
	if( ${?rm_extensions} ) unset rm_extensions;
	if( ${?use_launcher} ) unset use_launcher;
	@ ff_attempt=6;
	goto ff_start
endif

exit;

ff_start:
if( ${?use_launcher} ) then
	echo /usr/bin/gnome-terminal --role="launcher:${ff_binary}" --geometry=80x10 --hide-menubar --tab-with-profile='[terminal]tcsh -f' --command="${this_program}${argz}" \>\& /dev/null \&;
	/usr/bin/gnome-terminal --role="launcher:${ff_binary}" --geometry=80x10 --hide-menubar --tab-with-profile='[terminal]tcsh -f' --command="${this_program} ${argz}" >& /dev/null &;
else
	echo ${this_program} "${argz}" \>\& /dev/null \&;
	${this_program} "${argz}" >& /dev/null &;
endif
if( ${ff_attempt} > 5 ) then
	printf "Finished attempting load %s after %d attempts.\n" ${program} ${ff_attempt};
	if(! ${?ff_found} ) then
		set status=-1;
	else
		unset ff_found;
		set status=0;
	endif
	if( ${?rm_extensions} ) unset rm_extensions;
	if( ${?use_launcher} ) unset use_launcher;
	unset this_program program program_path firefox_profile_path ff_binaries ff_binary argz ff_pid ff_attempt;
	exit ${status};
endif

sleep 2;

goto ff_next;

