srv:
printf "%sing 192.168.4.4:/srv %s /srv/nfs\n" "${action}" "${to_or_from}";
if( "${action}" == "umount" ) then
	sudo umount -f /srv/nfs;
	#sudo ${action} -f /srv/nfs;
