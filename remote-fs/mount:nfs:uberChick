podiobooks:
printf "%sing 192.168.4.4:/media/podiobooks %s /media/podiobooks/nfs\n" "${action}" "${to_or_from}";
if( "${action}" == "umount" ) then
	sudo umount -f /media/podiobooks/nfs;
	#sudo ${action} -f /media/podiobooks/nfs;
