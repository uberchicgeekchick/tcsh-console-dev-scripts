#!/bin/tcsh -f
if(!( (${?1} && "${1}" != "") && ( ${?2} && "${2}" != "" ) )) exit -1;

while( ${?1} )
	if(!(${?alias})) then
		set alias="${1}";
	else if(!(${?exec})) then
	 	set exec="${1}";
		set command="${1}";
	else
		if(!(${?arguments})) then
			set arguments="${1}";
		else
			set arguments="${arguments} ${1}";
		endif
		set exec="${exec} ${1}";
	shift;
end
set program_found="FALSE";
foreach program ( "`which '${2}'`" )
	set program_found="TRUE";
end
if( "${program_found}" == "TRUE" ) then
	alias "${alias}" "${exec}"
endif

unset command arguments program_found program exec
